{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "galgame-save-assistant",
  "version": "0.1.0",
  "identifier": "com.linxy.galgame-save-assistant",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "galgame-save-assistant",
        "width": 1200,
        "height": 800,
        "resizable": false,
        "minWidth": 1200,
        "minHeight": 800,
        "maxWidth": 1200,
        "maxHeight": 800,
        "devtools": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "$APP/**",
          "$RESOURCE/**",
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
